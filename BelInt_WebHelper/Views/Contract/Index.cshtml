@model IEnumerable<BelInt_WebHelper.Models.DataModels.Contract>

@{
    ViewData["Title"] = "Список договоров";
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.ContractId)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.CurrencyContractId)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.RegDateCurrContract)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.SummaryPayment)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.ContractCurrency)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.ContractPayment)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.CountryOfRegister)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.DateOffContract)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.PaymentType)
            </th>
            <th style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.Reward)
            </th>
            <th  style="text-align:center; vertical-align:text-top">
                @Html.DisplayNameFor(model => model.IsYearWork)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    <a class="btn btn-primary" title="Сформировать" asp-action="GetSomeFile" asp-controller="Contract" asp-route-RowNumber="@item.RowNumber"><i class="fa-regular fa-file-word"></i></a>
                    <a class="btn btn-warning" title="Просмотреть" asp-action="" asp-controller="Contract"><i class="fa-regular fa-file-pdf"></i></a>
                    <a class="btn btn-danger" title="Удалить" asp-action="" asp-controller="Contract"><i class="fa-regular fa-trash-can"></i></a>
                    @*@Html.EditorFor(modelItem => item.IsChecked)*@
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.RowNumber)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyContractId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegDateCurrContract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SummaryPayment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractCurrency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractPayment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryOfRegister)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOffContract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reward)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsYearWork)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
